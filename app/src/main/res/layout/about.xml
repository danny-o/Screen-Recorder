<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_app_toolbar"
        android:layout_marginStart="34dp"
        android:text="@string/developer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/coder"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/developer"
        android:layout_marginTop="94dp"
        android:text="@string/coder"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coder"
        android:layout_marginStart="114dp"
        android:src="@drawable/twitter_icon" />

    <TextView
        android:id="@+id/twitter_handle"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/coder"
        android:layout_marginStart="142dp"
        android:text="@string/twitter_handle"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/twitter"
        android:layout_below="@id/twitter"
        android:src="@drawable/facebook_icon" />

    <TextView
        android:id="@+id/facebook_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter_handle"
        android:layout_alignStart="@id/twitter_handle"
        android:text="@string/facebook_username"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="ok" />

</RelativeLayout>
